<div class="container p-4"> 
    <div class="row">
        {{#each horas}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title text-uppercase">
                            {{nombre}}
                        </h3>
                        <p>{{horario}}</p>
                        <p>{{disponibilidad}}</p>
                        <a class="btn btn-primary btn-block" href="../formulariop" role="button">Solicitar</a>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>Por el momento no hay horas de atencion medica, intente mas tarde</p>
                </div>
            </div>
        {{/each}}

    </div>
</div>