<div class="container p-4"> 
    <div class="row">
        {{#each solicitudes}}
            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title text-uppercase">
                             {{rut}}
                        </h3>
                        <p>{{id_hora}}</p>
                        <p>{{motivo}}</p>
                        <a href="/admin/eliminar/{{id_hora}}" class="btn btn-danger">Eliminar</a><br>
                        <a href="/admin/solicitudes/{{id_hora}}" class="btn btn-primary">solicitudes</a><br>
                        <a href="/admin/editar/{{id_hora}}" class="btn btn-secondary">Editar</a><br>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>No hay solicitudes</p>
                </div>
            </div>
        {{/each}}
    </div>
</div>