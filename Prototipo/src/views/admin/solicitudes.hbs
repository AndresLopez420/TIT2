
<div class="container p-4"> 
    <div class="row">

        {{#each solicitaciones}}

            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title text-uppercase">
                            {{nombres}}
                            {{apellidos}}
                        </h3>
                        <p>Correo Paciente: {{correo_electronico}}</p>
                        <p>Numero Paciente Personal: {{telefono_personal}}</p>
                        <p>Numero Paciente Contacto: {{telefono_contacto}}</p>
                        <p>Direccion del Paciente: {{direccion}}</p>
                        <p>Profesional:{{nombre_profesional}}</p>
                        <p>{{horario}}</p>
                        <p>{{disponibilidad}}</p>
                        <p>Motivo:{{motivo}}</p>
        
                        <form action="https://formsubmit.co/pruebalecofq@gmail.com" method="POST" >

                        <div class="form-group">
                            <input type="email" name="correo" placeholder="Correo electronico" class="form-control">
                        </div>

                        <div>
                            <input type="radio" name="tipo" value="Solicitud Rechazada"><label>Rechazada</label>
                            <input type="radio" name="tipo" value="Solicitud Aprobada"><label>Confirmar</label>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block" style="background-color:#4983A4;">
                                ENVIAR RESPUESTA
                            </button>
                        </div>

                         <div class="form-group">
                            <button href="/admin/eliminar_solicitud/{{id_solicita}}" class="btn btn-success btn-block" style="background-color:#a45449;">
                                ELIMINAR SOLICITUD
                            </button>
                        </div>
                        <input type="hidden" name="_next" value="http://localhost:4000/admin/solicitudes">
                        <input type="hidden" name="_captcha" value="false">

                    </form>
                    </div>
                </div>
            </div>
        


        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>Por el momento no hay horas de atencion medica, intente mas tarde</p>
                </div>
            </div>
        {{/each}}

    </div>
</div>