
<div class="container p-4"> 
    <div class="row">

        {{#each solicitaciones}}

            <div class="col-md-3">
                <div class="card text-center">
                    <div class="card-body">
                        <h3 class="card-title text-uppercase">
                            {{nombres}}
                            {{apellidos}}
                        </h3>
                        <p>Correo Paciente: {{correo_electronico}}</p>
                        <p>Numero Paciente Personal: {{telefono_personal}}</p>
                        <p>Numero Paciente Contacto: {{telefono_contacto}}</p>
                        <p>Direccion del Paciente: {{direccion}}</p>
                        <p>Profesional:{{nombre_profesional}}</p>
                        <p>{{horario}}</p>
                        <p>{{disponibilidad}}</p>
                        <p>Motivo:{{motivo}}</p>
                        <div class="form-group">
                            <a href="/admin/solicitudes/sol_aprobada/{{id_solicita}}" class="btn btn-success btn-block" style="background-color:#4983A4;">
                                Solcitud Aprobada
                            </a>
                        </div>
                         <div class="form-group">
                            <a href="/admin/solicitudes/sol_rechazada/{{id_solicita}}" class="btn btn-success btn-block" style="background-color:#a45449;">
                                Solcitud Rechasada
                            </a>
                        </div>
                        <input type="hidden" name="_next" value="http://localhost:4000/admin/solicitudes">
                        <input type="hidden" name="_captcha" value="false">
                        
                    </form>
                    </div>
                </div>
            </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card card-body text-center">
                    <p>Por el momento no hay horas de atencion medica, intente mas tarde</p>
                </div>
            </div>
        {{/each}}
    </div>
</div>